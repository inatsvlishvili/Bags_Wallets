@model Bags_Wallets.ViewModels.PageImageViewModel

@{
    ViewData["Title"] = "DeletePageImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main class="mdl-layout__content mdl-color--grey-100">
    <div class="mdl-card mdl-shadow--2dp employer-form" action="#">
        <div class="mdl-card__title">
            <h2>Form</h2>
            <div class="mdl-card__subtitle">Please complete the form</div>
        </div>
        <hr />
    <dl class="row">
        <dt class = "col-sm-2">
                სახელი
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd> 
        <dt class = "col-sm-2">
                კოლექცია
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Collection)
        </dd>
        <dt class = "col-sm-2">
                აღწერა
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
                სურათი
        </dt>
        <dd class = "col-sm-10">
          <img src="~/Images/PageImages/@Model.ImageName" class="profile-image color--smooth-gray" style="width: 100; height: 80px; border-radius:1rem" />

        </dd>
     
        <dt class = "col-sm-2">
                კატეგორია
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageImageCategory.Id)
        </dd>
    </dl>
    
    <form asp-action="DeletePageImage">
        <input type="hidden" asp-for="Id" />
            <button id="submit_button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect button--colored-red">
                წაშლა
            </button>
            <div>
                <a href="javascript:history.back()">უკან დაბრუნება</a>
            </div>
    </form>
</div>
    
</main>