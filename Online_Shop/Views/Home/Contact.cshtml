@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url('/assets/images/b6.jpg');">
    <h2 class="ltext-105 cl0 txt-center">
        კონტაქტი
    </h2>
</section>

<section class="bg0 p-t-104 p-b-116" id="contactPage">
    <div class="container">
        <div class="flex-w flex-tr">
            <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md">
                <form asp-action="Contact" class="form" method="post">
                    <h4 class="mtext-105 cl2 txt-center p-b-30">
                        კ ო ნ ტ ა ქ ტ ი
                    </h4>
                    <div class="bor8 m-b-20 how-pos4-parent">
                        <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="text" name="Name" placeholder="სახელი">
                        <img class="how-pos4 pointer-none" src="~/assets/shop/images/icons/icon-person.png" alt="ICON">
                    </div>
                    <div class="bor8 m-b-20 how-pos4-parent">
                        <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="text" name="Email" placeholder="მეილი">
                        <img class="how-pos4 pointer-none" src="~/assets/shop/images/icons/icon-email.png" alt="ICON">
                    </div>
                    <div class="bor8 m-b-20 how-pos4-parent">
                        <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="text" name="Phone" placeholder="ტელეფონი">
                        <img class="how-pos4 pointer-none" src="~/assets/shop/images/icons/icon-phone.png" alt="ICON">
                    </div>
                    <div class="bor8 m-b-30">
                        <textarea class="stext-111 cl2 plh3 size-120 p-lr-28 p-tb-25" type="text" name="Text" placeholder="რით შეგვიძლია დაგეხმაროთ?"></textarea>
                    </div>

                    <button class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer">
                        გაგზავნა
                    </button>
                </form>
            </div>
            <div class="size-210 bor10 flex-w flex-col-m p-lr-93 p-tb-30 p-lr-15-lg w-full-md">
                <div class="flex-w w-full p-b-42">
                    <span class="fs-18 cl5 txt-center size-211">
                        <span class="lnr lnr-apartment"></span>
                    </span>
                    <div class="size-212 p-t-2">
                        <span class="mtext-110 cl2">
                            კომპანია
                        </span>
                        <p class="stext-115 cl6 size-213 p-t-18">
                            @ViewBag.ContactInfo.Title
                        </p>
                    </div>
                </div>

                <div class="flex-w w-full p-b-42">
                    <span class="fs-18 cl5 txt-center size-211">
                        <span class="lnr lnr-map-marker"></span>
                    </span>

                    <div class="size-212 p-t-2">
                        <span class="mtext-110 cl2">
                            მისამართი
                        </span>

                        <p class="stext-115 cl6 size-213 p-t-18">
                            @ViewBag.ContactInfo.Address
                        </p>
                    </div>
                </div>

                <div class="flex-w w-full p-b-42">
                    <span class="fs-18 cl5 txt-center size-211">
                        <span class="lnr lnr-phone-handset"></span>
                    </span>

                    <div class="size-212 p-t-2">
                        <span class="mtext-110 cl2">
                            საკონტაქტო ტელეფონი
                        </span>

                        <p class="stext-115 cl1 size-213 p-t-18">
                            @ViewBag.ContactInfo.Phone
                        </p>
                    </div>
                </div>

                <div class="flex-w w-full">
                    <span class="fs-18 cl5 txt-center size-211">
                        <span class="lnr lnr-envelope"></span>
                    </span>

                    <div class="size-212 p-t-2">
                        <span class="mtext-110 cl2">
                            მეილი
                        </span>

                        <p class="stext-115 cl1 size-213 p-t-18">
                            @ViewBag.ContactInfo.Email
                        </p>
                    </div>
                </div>
                <br />
                <div class="flex-w w-full p-b-42">
                    <span class="fs-18 cl5 txt-center size-211">
                        <span class="lnr lnr-clock"></span>
                    </span>

                    <div class="size-212 p-t-2">
                        <span class="mtext-110 cl2">
                            სამუშაო საათები
                        </span>

                        <p class="stext-115 cl6 size-213 p-t-18">
                            @ViewBag.ContactInfo.Text
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
