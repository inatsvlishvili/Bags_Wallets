@model Bags_Wallets.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />

<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
       
    </div>
</div>
<!-- Product Detail -->
<section class="sec-product-detail bg0 p-t-65 p-b-60" id="#f6f6f6">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-7 p-b-30">
                <div class="p-l-25 p-r-30 p-lr-0-lg">
                    <div class="wrap-slick3 flex-sb flex-w">
                        <div class="wrap-slick3-dots"></div>
                        <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>
                        <div class="slick3 gallery-lb">

                            @foreach (var item in Model.Images)
                            {
                                <div class="item-slick3" data-thumb="@item.ImagePath">
                                    <div class="wrap-pic-w pos-relative">
                                        <img src="@item.ImagePath" alt="IMG-PRODUCT">

                                        <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="@item.ImagePath">
                                            <i class="fa fa-expand"></i>
                                        </a>
                                    </div>
                                </div>

                            }

                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-5 p-b-30">
                <div class="p-r-50 p-t-5 p-lr-0-lg">
                    <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                        @Model.Title
                    </h4>
                    <span class="mtext-106 cl2">
                        @Model.Price ₾
                    </span>

                    <p class="stext-102 cl3 p-t-23">
                        <span style="white-space: pre-line">@Model.Description</span>
                    </p>


                    <div class="flex-w flex-r-m p-b-10">
                        <div class="size-204 flex-w flex-m respon6-next">
                            <div class="wrap-num-product flex-w m-r-20 m-tb-10">
                                <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                    <i class="fs-16 zmdi zmdi-minus"></i>
                                </div>

                                <input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product" value="1">

                                <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                    <i class="fs-16 zmdi zmdi-plus"></i>
                                </div>
                            </div>
                            <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post">
                                <input type="hidden" name="productId" value="@Model.Id" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
                                    დამატება
                                    @* <a href="@Url.Action("AddToCart", "ShoppingCart", new { id = ViewBag.ProductId })"></a> *@
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!--  -->
                <div class="flex-w flex-m p-l-100 p-t-40 respon7">
                    <div class="flex-m bor9 p-r-10 m-r-11">
                        <div class="block2-txt-child2 flex-r p-t-3">

                            <form asp-controller="WishList" asp-action="AddToWishlist" method="post">
                                <input type="hidden" name="productId" value="@Model.Id" />

                                @*  <input type="hidden" name="quantity" value="1" /> *@

                                @* <a href="@Url.Action("AddToCart", "ShoppingCart", new { id = ViewBag.ProductId })"></a> *@

                                <button type="submit">
                                     
                                <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 js-addwish-detail tooltip100" data-tooltip="ფავორიტი">
                                    <i class="zmdi zmdi-favorite"></i>
                                </a>
                                </button>
                                @* <a href="@Url.Action("AddToCart", "ShoppingCart", new { id = ViewBag.ProductId })"></a> *@

                                  
                                
                            </form>
                        
                    </div>

                    <a href="@ViewBag.ContactInfo.Facebook" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Facebook">
                        <i class="fa fa-facebook"></i>
                    </a>

                    <a href="@ViewBag.ContactInfo.Instagram" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="ინსტაგრამი">
                        <i class="fa fa-instagram"></i>
                    </a>

                    <a href="@ViewBag.ContactInfo.Tiktok" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="ტიკტოკი">
                        <i class="fa fa-tiktok"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="bor10 m-t-50 p-t-43 p-b-40">
        <!-- Tab01 -->
        <div class="tab01">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">

                <li class="nav-item p-b-10">
                    <a class="nav-link" role="tab"><b>კომენტარები</b></a>
                </li>
            </ul>

            <!-- - -->
            <div class="tab-pane fade show active" id="reviews" role="tabpanel">
                <div class="row">
                    <div class="col-sm-10 col-md-8 col-lg-5 m-lr-auto">
                        <div class="p-b-30 m-lr-15-sm">
                            <!-- Review -->
                            @foreach (var item in Model.Comments)
                            {

                                <div class="flex-w flex-t p-b-68">
                                    <div class="wrap-pic-s size-109 bor0 of-hidden m-r-18 m-t-6">
                                        <img src="~/assets/shop/images/avatar-01.jpg" alt="AVATAR">
                                    </div>
                                    <div class="size-207">
                                        <div class="flex-w flex-sb-m p-b-17">
                                            <span class="mtext-107 cl2 p-r-20">
                                                @item.Name
                                            </span>
                                        </div>
                                        <p class="stext-102 cl6">
                                            @item.Text
                                        </p>
                                    </div>
                                </div>
                            }

                            <!-- Add review -->
                            <form asp-action="ProductDetail" method="post" class="w-full">
                                <h5 class="mtext-108 cl2 p-b-7">
                                    გაგვიზიარეთ შთაბეჭდილება
                                </h5>

                                <div class="flex-w flex-m p-t-50 p-b-23">
                                </div>
                                <div class="row p-b-25">
                                    <div class="col-sm-6 p-b-5">
                                        <label class="stext-102 cl3" for="name">სახელი</label>
                                        <input class="size-111 bor8 stext-102 cl2 p-lr-20" id="name" type="text" name="Name">
                                    </div>

                                    <div class="col-sm-6 p-b-5">
                                        <label class="stext-102 cl3" for="email">მეილი</label>
                                        <input class="size-111 bor8 stext-102 cl2 p-lr-20" id="email" type="text" name="Email">
                                    </div>

                                    <div class="col-12 p-b-5">
                                        <label class="stext-102 cl3" for="review">კომენტარი</label>
                                        <textarea class="size-110 bor8 stext-102 cl2 p-lr-20 p-tb-10" type="text" name="Text"></textarea>
                                    </div>

                                    @*  <div class="bor8 m-b-20 how-pos4-parent">
                                    <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="text" name="Name" placeholder="სახელი">
                                    <img class="how-pos4 pointer-none" src="~/assets/shop/images/icons/icon-person.png" alt="ICON">
                                    </div>
                                    <div class="bor8 m-b-20 how-pos4-parent">
                                    <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="text" name="Email" placeholder="მეილი">
                                    <img class="how-pos4 pointer-none" src="~/assets/shop/images/icons/icon-email.png" alt="ICON">
                                    </div>

                                    <div class="bor8 m-b-30">
                                    <textarea class="stext-111 cl2 plh3 size-120 p-lr-28 p-tb-25" type="text" name="Text" placeholder="გაგვიზიარე შთაბეჭდილება"></textarea>
                                    </div> *@



                                </div>

                                <button type="submit" class="flex-c-m stext-101 cl0 size-112 bg7 bor11 hov-btn3 p-lr-15 trans-04 m-b-10">
                                    დამატება
                                    <a href="@Url.Action("ProductDetail", "Home", new { id = ViewBag.ProductId })"></a>
                                </button>
                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>


</section>



<!-- Back to top -->
<div class="btn-back-to-top" id="myBtn">
    <span class="symbol-btn-back-to-top">
        <i class="zmdi zmdi-chevron-up"></i>
    </span>
</div>

