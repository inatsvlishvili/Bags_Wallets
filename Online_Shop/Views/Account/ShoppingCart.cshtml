 @model Bags_Wallets.ViewModels.ShoppingCartViewModel


@{
    ViewData["Title"] = "ShoppingCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<div class="container" id="contactPage">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
       
    </div>
</div>
<div class="bg0 p-t-75 p-b-85">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                <div class="m-l-25 m-r--38 m-lr-0-xl">
                    <div class="wrap-table-shopping-cart">
                        <table class="table-shopping-cart">
                            <tr class="table_head">
                                <td class="column-1">სურათი</td>
                                <td class="column-2">სახელი</td>
                                <td class="column-3">ფასი</td>
                                <td class="column-5">ტიპი</td>
                                <td class="column-4">რაოდენობა</td>
                                <td class="column-4"></td>
                            </tr>

                            @foreach (var item in Model.Items)
                            {
                                <tr class="table_row">
                                    <td class="column-1">
                                        <div class="how-itemcart1">
                                            <img src="@item.Product.Images.FirstOrDefault().ImagePath" alt="IMG">
                                        </div>
                                    </td>
                                    <td class="column-2">@item.Product.Title</td>

                                    @* <td class="column-2">Fresh Strawberries</td> *@
                                    <td class="column-3">@item.Price ₾</td>
                                    <td class="column-5">@item.Product.Gender</td>
                                    <td class="column-4">
                                        <div class="wrap-num-product flex-w m-l-auto m-r-0">
                                            <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                                <i class="fs-16 zmdi zmdi-minus"></i>
                                            </div>

                                            <input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product1" value="1">

                                            <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                                <i class="fs-16 zmdi zmdi-plus"></i>
                                            </div>
                                        </div>
                                    </td>

                                </tr>
                            }

                        </table>
                    </div>

                </div>
            </div>
            <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                <form asp-controller="Order" asp-action="Checkout" method="post">

                    <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">

                        <h4 class="mtext-109 cl2 p-b-30">
                            <b>ყიდვა</b>
                        </h4>

                        <div class="flex-w flex-t bor12 p-b-13">
                            <div class="size-208">
                                @*  <span class="stext-110 cl2">
                                <b>ჯამური თანხა:</b>
                                </span> *@
                            </div>

                            <div class="size-209">
                                @* <span class="mtext-110 cl2">
                                @Model.
                                </span> *@
                            </div>
                        </div>
                        <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                <div class="p-t-15">
                                    <div class="bor8 bg0 m-b-12">
                                        <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="FirstName" placeholder="სახელი">
                                    </div>
                                    <div class="bor8 bg0 m-b-12">
                                        <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="LastName" placeholder="გვარი">
                                    </div>
                                    <div class="bor8 bg0 m-b-12">
                                        <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="MobileNumber" placeholder="ტელეფონი">
                                    </div>
                                    <div class="bor8 bg0 m-b-12">
                                        <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="Email" placeholder="მეილი">
                                    </div>
                                    <div class="bor8 bg0 m-b-12">
                                        <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="City" placeholder="ქალაქი">
                                    </div>
                                    <div class="bor8 bg0 m-b-12">
                                        <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="Address" placeholder="მისამართი">
                                    </div>
                                    <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
                                        <select class="js-select2" name="PaymentMethod">
                                            <option>გადახდის მეთოდი</option>
                                            <option>ნაღდი ფული</option>
                                            <option>ბარათი</option>
                                        </select>
                                        <div class="dropDownSelect2"></div>
                                    </div>
                                    <div class="bor8 bg0 m-b-12">
                                        <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="Description" placeholder="აღწერა">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                            დადასტურება
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


