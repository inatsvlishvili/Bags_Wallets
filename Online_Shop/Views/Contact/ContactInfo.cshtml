@model IEnumerable<Bags_Wallets.ViewModels.ContactInfoViewModel>

@{
    ViewData["Title"] = "ContactInfo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<main class="mdl-layout__content ">
    <div class="mdl-grid ui-tables">
        <div class="mdl-cell mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--4-col-phone">
            <div class="mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title">
                    <h1 class="mdl-card__title-text">საკონტაქტო ინფორმაცია</h1>
                </div>
                <div class="mdl-card__supporting-text no-padding">
                    <a asp-action="AddContactInfo" button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect button--colored-green">ახლის შექმნა</a>
                    <table class="mdl-data-table mdl-js-data-table">
                        <thead>
                            <tr>
                                <td class="mdl-data-table__cell--non-numeric">#</td>
                                <td class="mdl-data-table__cell--non-numeric">
                                    სახელი
                                </td>
                                <td class="mdl-data-table__cell--non-numeric">
                                    მისამართი
                                </td>
                                <td class="mdl-data-table__cell--non-numeric">
                                    ტელეფონი
                                </td>
                                <td class="mdl-data-table__cell--non-numeric">
                                    მეილი
                                </td>
                                <td class="mdl-data-table__cell--non-numeric">
                                    ფეისბუქი
                                </td>
                                <td class="mdl-data-table__cell--non-numeric">
                                    ინსტაგრამი
                                </td>
                                <td class="mdl-data-table__cell--non-numeric">
                                    ტიკტოკი
                                </td>
                                <td class="mdl-data-table__cell--non-numeric">
                                    ტექსტი
                                </td>
                                <td class="mdl-data-table__cell--non-numeric">მართვა</td>
                            </tr>
                        </thead>
                        <tbody>

                            @{
                                int rowNo = 0;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="mdl-data-table__cell--non-numeric">@(rowNo += 1)</td>

                                    <td class="mdl-data-table__cell--non-numeric">
                                        <span style="white-space: pre-line">@Html.DisplayFor(modelItem => item.Title)</span>
                                       
                                    </td>
                                    <td class="mdl-data-table__cell--non-numeric">
                                        <span style="white-space: pre-line">@Html.DisplayFor(modelItem => item.Address)</span>
                                    </td>
                                    <td class="mdl-data-table__cell--non-numeric">
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td class="mdl-data-table__cell--non-numeric">
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td class="mdl-data-table__cell--non-numeric">
                                        @Html.DisplayFor(modelItem => item.Facebook)
                                    </td>
                                    <td class="mdl-data-table__cell--non-numeric">
                                        @Html.DisplayFor(modelItem => item.Instagram)
                                    </td>
                                    <td class="mdl-data-table__cell--non-numeric">
                                        @Html.DisplayFor(modelItem => item.Tiktok)
                                    </td>
                                    <td class="mdl-data-table__cell--non-numeric">
                                        <span style="white-space: pre-line">@Html.DisplayFor(modelItem => item.Text)</span>

                                    </td>
                                    <td class="mdl-data-table__cell--non-numeric">
                                        <a asp-action="EditContactInfo" asp-route-id="@item.Id">
                                            <button class="mdl-button mdl-js-button mdl-button--raised button--colored-orange">
                                                <span class="material-icons">
                                                    rotate_right
                                                </span>რედაქტირება
                                            </button>
                                        </a>
                                        <a asp-action="DeleteContactInfo" asp-route-id="@item.Id">
                                            <button class="mdl-button mdl-js-button mdl-button--raised material-icons button--colored-red">
                                                <span class="material-icons">
                                                    delete
                                                </span>წაშლა
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>
