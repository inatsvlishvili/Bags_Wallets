@model Bags_Wallets.ViewModels.ContactUsViewModel

@{
    ViewData["Title"] = "EditContactUs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main class="mdl-layout__content mdl-color--grey-100">
    <div class="mdl-card mdl-shadow--2dp employer-form" action="#">
        <div class="mdl-card__title">
            <h2>შეტყობინების რედაქტირება</h2>
        </div>
        <div class="mdl-card__supporting-text">
            <form asp-action="EditContactUs" class="form" enctype="multipart/form-data">
                <div class="form__article">
                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input asp-for="Name" class="mdl-textfield__input" type="text" id="Name" />
                            <label asp-for="Name" class=" mdl-textfield__label" for="Name">სახელი</label>
                        </div>
                    </div>
                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input asp-for="Email" class="mdl-textfield__input" type="text" id="Email" />
                            <label asp-for="Email" class=" mdl-textfield__label" for="Email">მეილი</label>
                        </div>
                    </div>
                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input asp-for="Phone" class="mdl-textfield__input" type="text" id="Phone" />
                            <label asp-for="Phone" class=" mdl-textfield__label" for="Phone">ტელეფონი</label>
                        </div>
                    </div>
                    <div class="form__article employer-form__general_skills">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <textarea class="mdl-textfield__input" input asp-for="Text" type="text" rows="3" id="Text"></textarea>
                            <label asp-for="Text" class="mdl-textfield__label" for="StoryText3">ტექსტი</label>
                        </div>
                    </div>

                    <button id="submit_button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect button--colored-orange">
                        რედაქტირება
                    </button>
                </div>
            </form>
        </div>
        <div>
            <a href="javascript:history.back()">უკან დაბრუნება</a>
        </div>
    </div>

</main>




