@model Bags_Wallets.ViewModels.ContactInfoViewModel

@{
    ViewData["Title"] = "AddContactInfo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main class="mdl-layout__content mdl-color--grey-100">
    <div class="mdl-card mdl-shadow--2dp employer-form" action="#">
        <div class="mdl-card__title">
            <h2>საკონტაქტო ინფორმაციის დამატება</h2>
        </div>
        <div class="mdl-card__supporting-text">
            <form asp-action="AddContactInfo" class="form" enctype="multipart/form-data">
                  <div class="form__article">
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input asp-for="Title" class="mdl-textfield__input" type="text" id="Title" />
                        <label asp-for="Title" class=" mdl-textfield__label" for="Title">კომპანიის სახელი</label>
                    </div>
                </div>
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input asp-for="Address" class="mdl-textfield__input" type="text" id="Address" />
                        <label asp-for="Address" class=" mdl-textfield__label" for="Address">მისამართი</label>
                    </div>
                </div>
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input asp-for="Phone" class="mdl-textfield__input" type="text" id="Phone" />
                        <label asp-for="Phone" class=" mdl-textfield__label" for="Phone">ტელეფონი</label>
                    </div>
                </div>
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input asp-for="Email" class="mdl-textfield__input" type="text" id="Email" />
                        <label asp-for="Email" class=" mdl-textfield__label" for="Email">მეილი</label>
                    </div>
                </div
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input asp-for="Facebook" class="mdl-textfield__input" type="text" id="Facebook" />
                        <label asp-for="Facebook" class=" mdl-textfield__label" for="Facebook">ფეისბუქი</label>
                    </div>
                </div>
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input asp-for="Instagram" class="mdl-textfield__input" type="text" id="Instagram" />
                        <label asp-for="Instagram" class=" mdl-textfield__label" for="Instagram">ინსტაგრამი</label>
                    </div>
                </div>
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input asp-for="Tiktok" class="mdl-textfield__input" type="text" id="Tiktok" />
                        <label asp-for="Tiktok" class=" mdl-textfield__label" for="Tiktok">ტიკტოკი</label>
                    </div>
                </div>
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input asp-for="Text" class="mdl-textfield__input" type="text" id="Text" />
                        <label asp-for="Text" class=" mdl-textfield__label" for="Text">სამუშაო საათები</label>
                    </div>
                </div>
                <button id="submit_button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect button--colored-light-blue">
                        დამატება
                    </button>
                    </div>
            </form>
              <div>
        <a href="javascript:history.back()">უკან დაბრუნება</a>
    </div>
    </div>
</main>

